/* pages/userInfo/edit/edit.wxss */
page {
  background: #f7f8f9;
}

/* 标题 */

.title-area {
  width: 718rpx;
  height: 168rpx;
  background: #fff;
  margin: 12rpx auto;
  padding: 24rpx 0 36rpx 24rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
}

.title-input {
  width: 100%;
  padding-left: 2rpx;
  box-sizing: border-box;
  height: 100%;
  outline: 0;
}

/* 发布平台 */

.detail-area {
  width: 718rpx;
  background: #fff;
  margin: 12rpx auto;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
  border-radius: 8rpx;
}

.cu-form-group {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  padding-top: 36rpx;
  border-bottom: 2rpx solid #e4e4e4;
  box-sizing: border-box;
}

.cu-picker {
  height: 100rpx;
  width: 100%;
  font-size: 28rpx;
  color: #999;
}

.picker-border {
  width: 100%;
  height: 100rpx;
}

.picker {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

/* 报酬类型一栏 */

.cu-type {
  width: 100%;
  height: 180rpx;
  display: flex;
  padding-top: 36rpx;
  border-bottom: 2rpx solid #e4e4e4;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
}

.group-flex {
  height: 100%;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.picker-bb {
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  color: #999;
}

.picker-text {
  color: #999;
  height: 88rpx;
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.center-divsion {
  width: 2rpx;
  height: 100rpx;
  margin-top: 10rpx;
  background: #d8d8d8;
}

.no-bottom {
  border-bottom: none;
}

.inputcenter {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #999;
}

.intro-area {
  width: 718rpx;
  background: #fff;
  margin: 12rpx auto;
  padding: 36rpx 24rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
  border-radius: 8rpx;
}

.detail-intro {
  width: 100%;
  height: 146rpx;
  margin-top: 24rpx;
  font-size: 28rpx;
}

.subbtn {
  margin-top: 48rpx;
  font-size: 28rpx;
  font-weight: 400;
}

textarea input {
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

.release-all {
  width: 750rpx;
  padding-bottom: 50rpx;
  box-sizing: content-box;
}

.text_tip {
  color: grey;
  font-size: 22rpx;
  margin-top: 5rpx;
  margin-left: 5rpx;
}

.upload-area {
  width: 718rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  padding: 36rpx 24rpx;
  box-sizing: border-box;
}

.upLoadArea {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 15rpx;
}

.imgBox {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 10rpx;
  position: relative;
}

.imgs {
  width: 100%;
  height: 100%;
}

.delImg {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  right: 5rpx;
  top: 5rpx;
}

.delImg .del {
  width: 100%;
  height: 100%;
}

.uploadImg {
  width: 200rpx;
  height: 200rpx;
  margin-left: 10rpx;
  background: rgb(236, 235, 235);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #fff;
}

