page {
  background: #f7f8f9;
  font-weight: 400;
}

.filter_nav {
  position: fixed;
  top: 0;
  z-index: 10;
  background: #fff;
}

.mes-top {
  width: 750rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tabtitle {
  flex: 1;
  height: 90rpx;
  font-size: 30rpx;
}

swiper {
  width: 750rpx;
  min-height: 100vh;
}

.list {
  width: 750rpx;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.card_mid {
  position: relative;
}

.checkstate {
  position: absolute;
  right: 0;
}

.card {
  position: relative;
}

.checkstate {
  position: absolute;
  right: 0;
  top: 110rpx;
  width: 90rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 200rpx 0rpx 0rpx 200rpx;
  font-size: 22rpx;
}

